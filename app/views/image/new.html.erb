<div id="images">
	<%= render @images %>	
</div>

<div class="clear"></div>


<%= form_for Image.new  do |f| %>
	<%= f.label :image, "Upload image:" %>
	<%= f.file_field :image, multiple: true , name: "image[image]" %>
<% end %>

<script id="template-upload" type="text/x-tmpl">
	<div class="upload">
		{%=0.name%}
		<div class="progress">
			<div class="bar" style="width: 0%"></div>	
		</div>
	</div>
</script>
